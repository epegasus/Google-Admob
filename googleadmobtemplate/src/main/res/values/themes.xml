<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoogleAdMob" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextViewAttribution">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">"AD"</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_ads_notify</item>
    </style>

    <style name="CustomTextViewTitle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextViewBody">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_700</item>
        <item name="rippleColor">@color/purple_500</item>
        <item name="shapeAppearance">@style/CustomButtonShapeAppearance</item>
    </style>

    <style name="CustomButtonShapeAppearance">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>
</resources>